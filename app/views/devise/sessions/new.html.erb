 
    <h1><strong>Log in</strong></h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<!--       <h3> -->
        <div class="field" style="width: 300px;">
          <%= f.label :email %><br />
          <%= f.email_field :email, {:class=> 'input', :placeholder=> "myemail@example.com", :autofocus=> true, :autocomplete=> "email"} %>
        </div>
<!--       </h3> -->
        <div class="field" style="width: 300px;">
          <%= f.label :password %><br />
          <%= f.password_field :password, {:class=> 'input', :placeholder=> "ex: mypassword123", :autocomplete=> "off"} %>
        </div>

      <% if devise_mapping.rememberable? -%>
<!--       <h6> -->
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me%>
        </div>
<!--       </h6> -->
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", {:class=>"button is-normal is-info is-focused"} %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>


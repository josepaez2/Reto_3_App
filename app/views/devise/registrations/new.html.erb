

    <h1><strong>Sign up</strong></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :name , "Name (*)"%><br />
        <%= f.text_field :name, {:class=> 'input', :placeholder=> "name", :autofocus=> true, :autocomplete=> "name"}%>
      </div>
      <div class="field">
        <%= f.label :last_name, "Last name (*)" %><br />
        <%= f.text_field :last_name, {:class=> 'input', :placeholder=> "last name", :autofocus=> true, :autocomplete=> "last_name"}%>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, {:class=> 'input', :placeholder=> "myemail@example.com", :autofocus=> true, :autocomplete=> "email"}%>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, {:class=> 'input', :placeholder=> "ex: mypassword123", :autocomplete=> "off"} %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, {:class=> 'input', :placeholder=> " mypassword123", :autocomplete=> "off"} %>
      </div>
      <p>(*) fields marked with an asterisk are optional </p>
      <br>
        <div class="actions">
          <%= f.submit "Sign up", {:class=>"button is-medium is-info is-focused"}  %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
